<% @companies.each do |company| %>
    <div class="col-lg-3 col-sm-6 mb-4">            
        <div class="card m-3">
            <%= link_to company, data: { turbo: false } do %>
                <%= image_tag company.image, class: "card-img-top magnitude" %>
            <% end %>
            <div class="portfolio-caption">
                <div>
                    <div class="average-review-rating" data-score=<%= @average_review %>></div>
                </div>
                <div class="portfolio-caption-subheading text-muted"><%= link_to company.name, company_path(company.id), data: { turbo: false } %></div>
            </div>
        </div>
    </div>
<% end %>