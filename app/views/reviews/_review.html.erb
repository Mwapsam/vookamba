<div class="card m-3">
  <div class="review-rating p-3" data-score="<%= review.rating %>"></div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= review.comment %></p>
      <footer class="blockquote-footer"> <cite title="Source Title"><%= review.user.username %></cite></footer>
      <% if user_signed_in? %>
        <% if review.user_id == current_user.id %>
            <%= link_to "", edit_company_review_path(review.company, review), data: { turbo: false }, class: "bi bi-pencil-square px-3" %>
            <%= link_to "", company_review_path(review.company, review), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "bi bi-trash3-fill px-3 text-danger" %>
        <% end %>
      <% end%>
    </blockquote>
  </div>
</div>
