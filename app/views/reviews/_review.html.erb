<div class="card m-3">
  <div class="review-rating p-3" data-score="<%= review.rating %>"></div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= review.comment %></p>
      <div class="d-flex justify-content-between">
        <footer class="blockquote-footer"> <cite title="Source Title"><%= review.user.username %> </cite></footer>
        <%= l(review.created_at, format: '%B, %d %Y', class: "blockquote-footer") %>
      </div>
      <% if user_signed_in? %>
        <% if review.user_id == current_user.id %>
            <div class="d-flex">
              <%= link_to "", edit_company_review_path(review.company, review), data: { turbo: false }, class: "bi bi-pencil-square px-3" %>
              <%= button_to "", company_review_path(review.company, review), method: :delete, data: {turbo: false}, class: "bi bi-trash3-fill text-danger bg-white", style: "border: none" %>
            </div>
        <% end %>
      <% end%>
    </blockquote>
  </div>
</div>
