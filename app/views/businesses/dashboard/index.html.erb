<div class="d-flex">
    <%= render "shared/business_nav" %>
    <div class="container mt-5">
         <div class="row">
            <p class="text-center">The charts below show the number of reviews you received</p>
            <div class="col-lg-6 grid-margin grid-margin-lg-0 stretch-card">
              <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Pie chart</h4>
                    <%= pie_chart Review.group(:rating).count, xtitle: "Rating", ytitle: "Reviews" %>
                </div>
              </div>
            </div>
            <div class="col-lg-6 grid-margin grid-margin-lg-0 stretch-card">
              <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Scatter chart</h4>
                    <%= area_chart Review.group(:rating).count, xtitle: "Rating", ytitle: "Reviews" %>
                </div>
              </div>
            </div>
          </div>
    </div>
</div>