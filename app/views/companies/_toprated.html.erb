<% @top_rated.each do |top| %>
    <div class="col-lg-3 col-sm-6 mb-4">            
        <div class="card m-3">
            <%= link_to category_path(top.id), data: { turbo: false } do %>
                <%= image_tag top.picture, class: "card-img-top magnitude" %>
                <div class="text-center pt-3">
                    <p class="p-text p-2"><%= top.name %></p>
                </div>
            <% end %>
        </div>
    </div>
<% end %>

