<div class="container m-5">
	<div class="row">
		<div class="col-lg-6 col-xl-5 mx-auto">	
			<div class="card">
        <div class="card-body">
          <div class="lc-block mb-3 text-center">
              <%= link_to root_path, data: {turbo: false}, class: "navbar-brand" do %>
                <%= image_tag "vookamba-removebg-preview.png", class: "img-fluid me-1", alt: "Logo", width: "52px", height: "52px"%>
              <% end %>
              <h5 class="p-text">Change your password</h5>
            </div>
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, data: { turbo: false }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <%= f.hidden_field :reset_password_token %>

                <div class="form-outline mb-4">
                  <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New password", class: "form-control" %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm new password", class: "form-control" %>
                </div>

                <div class="col-6 mx-auto m-4">
                  <%= f.submit "Change my password", class: "btn-primary btn-sm " %>
                </div>
              <% end %>
          </div>
			</div>
		</div>
	</div>
</div>
