<div class="container m-5">
	<div class="row">
		<div class="col-lg-6 col-xl-5 mx-auto">	
			<div class="card">
        <div class="card-body">
            <div class="lc-block mb-3 text-center">
              <img class="img-fluid wp-image-1892" src="https://livecanvas.com/media/logos/ipsum/logoipsum-logo-35.svg" width="" height="39" srcset="" sizes="" alt="">
              <h2>Forgot your password?</h2>
            </div>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { turbo: false }) do |f| %>
              <p><%= render "devise/shared/error_messages", resource: resource %></p>

              <div class="form-outline mb-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control"  %>
              </div>

              <div class="mx-auto m-4">
                <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-lg " %>
              </div>
            <% end %> 
          </div>
			</div>
		</div>
	</div>
</div>

